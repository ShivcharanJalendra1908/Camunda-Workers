<?xml version="1.0" encoding="UTF-8"?>
<bpmn:definitions 
  xmlns:bpmn="http://www.omg.org/spec/BPMN/20100524/MODEL" 
  xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" 
  xmlns:dc="http://www.omg.org/spec/DD/20100524/DC" 
  xmlns:di="http://www.omg.org/spec/DD/20100524/DI" 
  xmlns:zeebe="http://camunda.org/schema/zeebe/1.0" 
  xmlns:modeler="http://camunda.org/schema/modeler/1.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  id="Definitions_PasswordReset" 
  targetNamespace="http://bpmn.io/schema/bpmn"
  exporter="Camunda Modeler" 
  exporterVersion="5.14.0" 
  modeler:executionPlatform="Camunda Cloud" 
  modeler:executionPlatformVersion="8.3.0">

  <!-- ERROR DEFINITIONS -->
  <bpmn:error id="Error_UserNotFound" name="USER_NOT_FOUND" errorCode="PASSWORD_001" />
  <bpmn:error id="Error_TokenGenerationFailed" name="TOKEN_GENERATION_FAILED" errorCode="PASSWORD_002" />
  <bpmn:error id="Error_EmailFailed" name="EMAIL_FAILED" errorCode="PASSWORD_003" />
  <bpmn:error id="Error_PasswordUpdateFailed" name="PASSWORD_UPDATE_FAILED" errorCode="PASSWORD_004" />
  <bpmn:error id="Error_ConfirmationFailed" name="CONFIRMATION_FAILED" errorCode="PASSWORD_005" />

  <bpmn:process id="password-reset-process" name="Password Reset Process" isExecutable="true">
    
    <!-- Start Event -->
    <bpmn:startEvent id="StartEvent_PasswordReset" name="Password Reset Request">
      <bpmn:outgoing>Flow_ResetStart</bpmn:outgoing>
    </bpmn:startEvent>

    <!-- Verify User Exists -->
    <bpmn:serviceTask id="Task_VerifyUser" name="Verify User Exists">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="user.verify" retries="3" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_ResetStart</bpmn:incoming>
      <bpmn:outgoing>Flow_UserVerified</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- User Verification Error Boundary -->
    <bpmn:boundaryEvent id="BoundaryEvent_UserError" name="User Not Found" attachedToRef="Task_VerifyUser">
      <bpmn:outgoing>Flow_UserError</bpmn:outgoing>
      <bpmn:errorEventDefinition id="ErrorEventDefinition_UserNotFound" errorRef="Error_UserNotFound" />
    </bpmn:boundaryEvent>

    <!-- Generate Reset Token -->
    <bpmn:serviceTask id="Task_GenerateToken" name="Generate Reset Token">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="token.generate" retries="2" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_UserVerified</bpmn:incoming>
      <bpmn:outgoing>Flow_TokenGenerated</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Token Generation Error Boundary -->
    <bpmn:boundaryEvent id="BoundaryEvent_TokenError" name="Token Generation Failed" attachedToRef="Task_GenerateToken">
      <bpmn:outgoing>Flow_TokenError</bpmn:outgoing>
      <bpmn:errorEventDefinition id="ErrorEventDefinition_TokenFailed" errorRef="Error_TokenGenerationFailed" />
    </bpmn:boundaryEvent>

    <!-- Send Reset Email -->
    <bpmn:serviceTask id="Task_SendResetEmail" name="Send Password Reset Email">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="email.send" retries="3" />
        <zeebe:ioMapping>
          <zeebe:input source="=userEmail" target="to" />
          <zeebe:input source="=&#34;Password Reset Instructions&#34;" target="subject" />
          <zeebe:input source="=&#34;Hi &#34; + firstName + &#34;,\n\nClick here to reset your password: &#34; + resetLink + &#34;\n\nThis link will expire in 1 hour.\n\nBest regards,\nSupport Team&#34;" target="body" />
        </zeebe:ioMapping>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_TokenGenerated</bpmn:incoming>
      <bpmn:outgoing>Flow_EmailSent</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Email Error Boundary -->
    <bpmn:boundaryEvent id="BoundaryEvent_EmailError" name="Email Failed" attachedToRef="Task_SendResetEmail">
      <bpmn:outgoing>Flow_EmailError</bpmn:outgoing>
      <bpmn:errorEventDefinition id="ErrorEventDefinition_EmailFailed" errorRef="Error_EmailFailed" />
    </bpmn:boundaryEvent>

    <!-- Wait for Reset -->
    <bpmn:intermediateCatchEvent id="Event_WaitReset" name="Wait for Reset (24h timeout)">
      <bpmn:incoming>Flow_EmailSent</bpmn:incoming>
      <bpmn:outgoing>Flow_ResetCompleted</bpmn:outgoing>
      <bpmn:timerEventDefinition id="TimerEventDefinition_Reset">
        <bpmn:timeDuration xsi:type="bpmn:tFormalExpression">PT24H</bpmn:timeDuration>
      </bpmn:timerEventDefinition>
    </bpmn:intermediateCatchEvent>

    <!-- Update Password -->
    <bpmn:serviceTask id="Task_UpdatePassword" name="Update User Password">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="user.password.update" retries="2" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_ResetCompleted</bpmn:incoming>
      <bpmn:outgoing>Flow_PasswordUpdated</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Password Update Error Boundary -->
    <bpmn:boundaryEvent id="BoundaryEvent_PasswordError" name="Password Update Failed" attachedToRef="Task_UpdatePassword">
      <bpmn:outgoing>Flow_PasswordError</bpmn:outgoing>
      <bpmn:errorEventDefinition id="ErrorEventDefinition_PasswordFailed" errorRef="Error_PasswordUpdateFailed" />
    </bpmn:boundaryEvent>

    <!-- Send Confirmation -->
    <bpmn:serviceTask id="Task_SendConfirmation" name="Send Reset Confirmation">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="email.send" retries="2" />
        <zeebe:ioMapping>
          <zeebe:input source="=userEmail" target="to" />
          <zeebe:input source="=&#34;Password Reset Successful&#34;" target="subject" />
          <zeebe:input source="=&#34;Hi &#34; + firstName + &#34;,\n\nYour password has been successfully reset.\n\nIf you didn&#39;t request this change, please contact support immediately.\n\nBest regards,\nSecurity Team&#34;" target="body" />
        </zeebe:ioMapping>
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_PasswordUpdated</bpmn:incoming>
      <bpmn:outgoing>Flow_EndReset</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Confirmation Error Boundary -->
    <bpmn:boundaryEvent id="BoundaryEvent_ConfirmationError" name="Confirmation Failed" attachedToRef="Task_SendConfirmation">
      <bpmn:outgoing>Flow_ConfirmationError</bpmn:outgoing>
      <bpmn:errorEventDefinition id="ErrorEventDefinition_ConfirmationFailed" errorRef="Error_ConfirmationFailed" />
    </bpmn:boundaryEvent>

    <!-- ERROR HANDLERS -->

    <!-- User Error Handler -->
    <bpmn:serviceTask id="Task_HandleUserError" name="Handle User Error">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="error.handler.user" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_UserError</bpmn:incoming>
      <bpmn:outgoing>Flow_UserErrorEnd</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Token Error Handler -->
    <bpmn:serviceTask id="Task_HandleTokenError" name="Handle Token Error">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="error.handler.token" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_TokenError</bpmn:incoming>
      <bpmn:outgoing>Flow_TokenErrorEnd</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Email Error Handler -->
    <bpmn:serviceTask id="Task_HandleEmailError" name="Handle Email Error">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="error.handler.email" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_EmailError</bpmn:incoming>
      <bpmn:outgoing>Flow_EmailErrorEnd</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Password Error Handler -->
    <bpmn:serviceTask id="Task_HandlePasswordError" name="Handle Password Error">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="error.handler.password" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_PasswordError</bpmn:incoming>
      <bpmn:outgoing>Flow_PasswordErrorEnd</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- Confirmation Error Handler -->
    <bpmn:serviceTask id="Task_HandleConfirmationError" name="Handle Confirmation Error">
      <bpmn:extensionElements>
        <zeebe:taskDefinition type="error.handler.confirmation" />
      </bpmn:extensionElements>
      <bpmn:incoming>Flow_ConfirmationError</bpmn:incoming>
      <bpmn:outgoing>Flow_ConfirmationErrorEnd</bpmn:outgoing>
    </bpmn:serviceTask>

    <!-- END EVENTS -->

    <!-- Success End Event -->
    <bpmn:endEvent id="EndEvent_Reset" name="Password Reset Complete">
      <bpmn:incoming>Flow_EndReset</bpmn:incoming>
    </bpmn:endEvent>

    <!-- Error End Events -->
    <bpmn:endEvent id="EndEvent_UserError" name="User Verification Failed">
      <bpmn:incoming>Flow_UserErrorEnd</bpmn:incoming>
    </bpmn:endEvent>

    <bpmn:endEvent id="EndEvent_TokenError" name="Token Generation Failed">
      <bpmn:incoming>Flow_TokenErrorEnd</bpmn:incoming>
    </bpmn:endEvent>

    <bpmn:endEvent id="EndEvent_EmailError" name="Email Send Failed">
      <bpmn:incoming>Flow_EmailErrorEnd</bpmn:incoming>
    </bpmn:endEvent>

    <bpmn:endEvent id="EndEvent_PasswordError" name="Password Update Failed">
      <bpmn:incoming>Flow_PasswordErrorEnd</bpmn:incoming>
    </bpmn:endEvent>

    <bpmn:endEvent id="EndEvent_ConfirmationError" name="Confirmation Send Failed">
      <bpmn:incoming>Flow_ConfirmationErrorEnd</bpmn:incoming>
    </bpmn:endEvent>

    <!-- SEQUENCE FLOWS -->

    <!-- Main Flow -->
    <bpmn:sequenceFlow id="Flow_ResetStart" sourceRef="StartEvent_PasswordReset" targetRef="Task_VerifyUser" />
    <bpmn:sequenceFlow id="Flow_UserVerified" sourceRef="Task_VerifyUser" targetRef="Task_GenerateToken" />
    <bpmn:sequenceFlow id="Flow_TokenGenerated" sourceRef="Task_GenerateToken" targetRef="Task_SendResetEmail" />
    <bpmn:sequenceFlow id="Flow_EmailSent" sourceRef="Task_SendResetEmail" targetRef="Event_WaitReset" />
    <bpmn:sequenceFlow id="Flow_ResetCompleted" sourceRef="Event_WaitReset" targetRef="Task_UpdatePassword" />
    <bpmn:sequenceFlow id="Flow_PasswordUpdated" sourceRef="Task_UpdatePassword" targetRef="Task_SendConfirmation" />
    <bpmn:sequenceFlow id="Flow_EndReset" sourceRef="Task_SendConfirmation" targetRef="EndEvent_Reset" />

    <!-- Error Flows -->
    <bpmn:sequenceFlow id="Flow_UserError" sourceRef="BoundaryEvent_UserError" targetRef="Task_HandleUserError" />
    <bpmn:sequenceFlow id="Flow_UserErrorEnd" sourceRef="Task_HandleUserError" targetRef="EndEvent_UserError" />

    <bpmn:sequenceFlow id="Flow_TokenError" sourceRef="BoundaryEvent_TokenError" targetRef="Task_HandleTokenError" />
    <bpmn:sequenceFlow id="Flow_TokenErrorEnd" sourceRef="Task_HandleTokenError" targetRef="EndEvent_TokenError" />

    <bpmn:sequenceFlow id="Flow_EmailError" sourceRef="BoundaryEvent_EmailError" targetRef="Task_HandleEmailError" />
    <bpmn:sequenceFlow id="Flow_EmailErrorEnd" sourceRef="Task_HandleEmailError" targetRef="EndEvent_EmailError" />

    <bpmn:sequenceFlow id="Flow_PasswordError" sourceRef="BoundaryEvent_PasswordError" targetRef="Task_HandlePasswordError" />
    <bpmn:sequenceFlow id="Flow_PasswordErrorEnd" sourceRef="Task_HandlePasswordError" targetRef="EndEvent_PasswordError" />

    <bpmn:sequenceFlow id="Flow_ConfirmationError" sourceRef="BoundaryEvent_ConfirmationError" targetRef="Task_HandleConfirmationError" />
    <bpmn:sequenceFlow id="Flow_ConfirmationErrorEnd" sourceRef="Task_HandleConfirmationError" targetRef="EndEvent_ConfirmationError" />

  </bpmn:process>

  <!-- DIAGRAM INFORMATION -->
  <bpmndi:BPMNDiagram id="BPMNDiagram_PasswordReset">
    <bpmndi:BPMNPlane id="BPMNPlane_PasswordReset" bpmnElement="password-reset-process">
      
      <!-- Start Event -->
      <bpmndi:BPMNShape id="StartEvent_PasswordReset_di" bpmnElement="StartEvent_PasswordReset">
        <dc:Bounds x="152" y="102" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Verify User Task -->
      <bpmndi:BPMNShape id="Task_VerifyUser_di" bpmnElement="Task_VerifyUser">
        <dc:Bounds x="240" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>

      <!-- User Error Boundary -->
      <bpmndi:BPMNShape id="BoundaryEvent_UserError_di" bpmnElement="BoundaryEvent_UserError">
        <dc:Bounds x="272" y="142" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Generate Token Task -->
      <bpmndi:BPMNShape id="Task_GenerateToken_di" bpmnElement="Task_GenerateToken">
        <dc:Bounds x="390" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>

      <!-- Token Error Boundary -->
      <bpmndi:BPMNShape id="BoundaryEvent_TokenError_di" bpmnElement="BoundaryEvent_TokenError">
        <dc:Bounds x="422" y="142" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Send Reset Email Task -->
      <bpmndi:BPMNShape id="Task_SendResetEmail_di" bpmnElement="Task_SendResetEmail">
        <dc:Bounds x="540" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>

      <!-- Email Error Boundary -->
      <bpmndi:BPMNShape id="BoundaryEvent_EmailError_di" bpmnElement="BoundaryEvent_EmailError">
        <dc:Bounds x="572" y="142" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Wait Reset Event -->
      <bpmndi:BPMNShape id="Event_WaitReset_di" bpmnElement="Event_WaitReset">
        <dc:Bounds x="690" y="102" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Update Password Task -->
      <bpmndi:BPMNShape id="Task_UpdatePassword_di" bpmnElement="Task_UpdatePassword">
        <dc:Bounds x="780" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>

      <!-- Password Error Boundary -->
      <bpmndi:BPMNShape id="BoundaryEvent_PasswordError_di" bpmnElement="BoundaryEvent_PasswordError">
        <dc:Bounds x="812" y="142" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Send Confirmation Task -->
      <bpmndi:BPMNShape id="Task_SendConfirmation_di" bpmnElement="Task_SendConfirmation">
        <dc:Bounds x="930" y="80" width="100" height="80" />
      </bpmndi:BPMNShape>

      <!-- Confirmation Error Boundary -->
      <bpmndi:BPMNShape id="BoundaryEvent_ConfirmationError_di" bpmnElement="BoundaryEvent_ConfirmationError">
        <dc:Bounds x="962" y="142" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Success End Event -->
      <bpmndi:BPMNShape id="EndEvent_Reset_di" bpmnElement="EndEvent_Reset">
        <dc:Bounds x="1082" y="102" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- Error Handler Shapes -->
      <bpmndi:BPMNShape id="Task_HandleUserError_di" bpmnElement="Task_HandleUserError">
        <dc:Bounds x="240" y="220" width="100" height="80" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="Task_HandleTokenError_di" bpmnElement="Task_HandleTokenError">
        <dc:Bounds x="390" y="220" width="100" height="80" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="Task_HandleEmailError_di" bpmnElement="Task_HandleEmailError">
        <dc:Bounds x="540" y="220" width="100" height="80" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="Task_HandlePasswordError_di" bpmnElement="Task_HandlePasswordError">
        <dc:Bounds x="780" y="220" width="100" height="80" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="Task_HandleConfirmationError_di" bpmnElement="Task_HandleConfirmationError">
        <dc:Bounds x="930" y="220" width="100" height="80" />
      </bpmndi:BPMNShape>

      <!-- Error End Events -->
      <bpmndi:BPMNShape id="EndEvent_UserError_di" bpmnElement="EndEvent_UserError">
        <dc:Bounds x="272" y="342" width="36" height="36" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="EndEvent_TokenError_di" bpmnElement="EndEvent_TokenError">
        <dc:Bounds x="422" y="342" width="36" height="36" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="EndEvent_EmailError_di" bpmnElement="EndEvent_EmailError">
        <dc:Bounds x="572" y="342" width="36" height="36" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="EndEvent_PasswordError_di" bpmnElement="EndEvent_PasswordError">
        <dc:Bounds x="812" y="342" width="36" height="36" />
      </bpmndi:BPMNShape>

      <bpmndi:BPMNShape id="EndEvent_ConfirmationError_di" bpmnElement="EndEvent_ConfirmationError">
        <dc:Bounds x="962" y="342" width="36" height="36" />
      </bpmndi:BPMNShape>

      <!-- FLOW EDGES -->

      <!-- Main Flow Edges -->
      <bpmndi:BPMNEdge id="Flow_ResetStart_di" bpmnElement="Flow_ResetStart">
        <di:waypoint x="188" y="120" />
        <di:waypoint x="240" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_UserVerified_di" bpmnElement="Flow_UserVerified">
        <di:waypoint x="340" y="120" />
        <di:waypoint x="390" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_TokenGenerated_di" bpmnElement="Flow_TokenGenerated">
        <di:waypoint x="490" y="120" />
        <di:waypoint x="540" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_EmailSent_di" bpmnElement="Flow_EmailSent">
        <di:waypoint x="640" y="120" />
        <di:waypoint x="690" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_ResetCompleted_di" bpmnElement="Flow_ResetCompleted">
        <di:waypoint x="726" y="120" />
        <di:waypoint x="780" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_PasswordUpdated_di" bpmnElement="Flow_PasswordUpdated">
        <di:waypoint x="880" y="120" />
        <di:waypoint x="930" y="120" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_EndReset_di" bpmnElement="Flow_EndReset">
        <di:waypoint x="1030" y="120" />
        <di:waypoint x="1082" y="120" />
      </bpmndi:BPMNEdge>

      <!-- Error Flow Edges -->
      <bpmndi:BPMNEdge id="Flow_UserError_di" bpmnElement="Flow_UserError">
        <di:waypoint x="290" y="178" />
        <di:waypoint x="290" y="220" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_UserErrorEnd_di" bpmnElement="Flow_UserErrorEnd">
        <di:waypoint x="290" y="300" />
        <di:waypoint x="290" y="342" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_TokenError_di" bpmnElement="Flow_TokenError">
        <di:waypoint x="440" y="178" />
        <di:waypoint x="440" y="220" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_TokenErrorEnd_di" bpmnElement="Flow_TokenErrorEnd">
        <di:waypoint x="440" y="300" />
        <di:waypoint x="440" y="342" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_EmailError_di" bpmnElement="Flow_EmailError">
        <di:waypoint x="590" y="178" />
        <di:waypoint x="590" y="220" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_EmailErrorEnd_di" bpmnElement="Flow_EmailErrorEnd">
        <di:waypoint x="590" y="300" />
        <di:waypoint x="590" y="342" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_PasswordError_di" bpmnElement="Flow_PasswordError">
        <di:waypoint x="830" y="178" />
        <di:waypoint x="830" y="220" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_PasswordErrorEnd_di" bpmnElement="Flow_PasswordErrorEnd">
        <di:waypoint x="830" y="300" />
        <di:waypoint x="830" y="342" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_ConfirmationError_di" bpmnElement="Flow_ConfirmationError">
        <di:waypoint x="980" y="178" />
        <di:waypoint x="980" y="220" />
      </bpmndi:BPMNEdge>

      <bpmndi:BPMNEdge id="Flow_ConfirmationErrorEnd_di" bpmnElement="Flow_ConfirmationErrorEnd">
        <di:waypoint x="980" y="300" />
        <di:waypoint x="980" y="342" />
      </bpmndi:BPMNEdge>

    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>

</bpmn:definitions>